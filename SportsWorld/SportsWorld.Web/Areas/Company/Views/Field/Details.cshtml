@model SportsWorld.Web.Areas.Company.Models.FieldDetailsViewModel

<h3 class="text-center alert alert-info big-text">@string.Format("\"{0}\" {1} field, owned by {2}", Model.Name, Model.Type, Model.CompanyName)</h3>

<div class="row">
    <div class="col-md-6">
        <div class="ratio img-rounded" style="background-image: url('@(Model.Image!=null? Model.Image: Url.Content("~/Images/default.png"))')">
        </div>
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-6">
                Location: @Model.CityName, @Model.CountryName
            </div>
            <div class="col-md-6">
                Created: @Model.DateCreated
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                Capacity: @Model.Capacity
            </div>
            <div class="col-md-6">
                Price per hour: @Model.PricePerHour
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                Total events: @Model.GameEvents.Count
            </div>
            <div class="col-md-6">
                Total earned money: @Model.TotalEarned
            </div>
        </div>
        <div class="row">
            <div class="col-md-offset-6 col-md-6">
                <div class="col-md-6">
                    @Html.Rating(Model.FieldRating, 5)
                </div>
                <div class="col-md-6">
                    @Model.FieldRating/5
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Model.Description
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div id="EditFieldPartial"></div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <input type="button" class="btn btn-warning btn-block" id="EditButton" value="Edit" />
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        @foreach (var comment in Model.Comments)
        {
            <p>
                @comment.Content
                <span>
                    Posted on: @comment.PostedOn by: @comment.Author.UserName
                </span>
            </p>
        }
    </div>
    <div class="col-md-6">

    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/jqueryUiStyle")
    @Styles.Render("~/Content/slider")
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryUI")
    @Scripts.Render("~/bundles/slider")
    @Scripts.Render("~/bundles/fieldCreate")
    @Scripts.Render("~/bundles/fieldDetails")
    <script>
        $(function () {
            sportsWorld.fieldDetails(@Model.ID);
        });
    </script>
}