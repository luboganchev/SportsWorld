@model SportsWorld.Web.Areas.Company.Models.CompanyDetailsViewModel
@{
    ViewBag.Title = "Company Info";
}
<h3 class="text-center alert alert-info big-text">Company Info</h3>
<div class="row">
    <div class="col-md-6">
        <div class="ratio img-rounded" style="background-image: url('@(Model.Image!=null? Model.Image: Url.Content("~/Images/default.png"))')"></div>
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-6">
                <p>
                    <strong class="text-primary">Name:</strong>
                    @Html.DisplayFor(m => m.Name)
                </p>
            </div>
            <div class="col-md-6">
                <p>
                    <strong class="text-primary">Country:</strong>
                    @Html.DisplayFor(m => m.CountryName)
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <p>
                    <strong class="text-primary">Unique number:</strong>
                    @Html.DisplayFor(m => m.UniqueNumber)
                </p>
            </div>
            <div class="col-md-6">
                <p>
                    <strong class="text-primary">Est. since:</strong>
                    @Html.DisplayFor(m => m.EstablishedYear)
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p>
                    <strong class="text-primary">Total revenue:</strong>
                    @Html.DisplayFor(m => m.TotalRevenue)
                </p>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <input type="button" class="btn btn-warning btn-block" id="EditButton" value="Edit" />
    </div>
</div>
<div class="row" id="EditPartialContainer">
    <div class="col-md-12">
        @Html.Partial("_Edit", Model)
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/companyDetails")
}