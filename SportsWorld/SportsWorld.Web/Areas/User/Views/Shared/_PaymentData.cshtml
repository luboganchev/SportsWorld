@model SportsWorld.Web.Areas.User.Models.PaymentDataViewModel

<div class="panel panel-warning">
    <div class="panel-heading">
        <h3 class="panel-title text-center">Payment summary</h3>
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(m => m.Type, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Type)
                @Html.ValidationMessageFor(m => m.Type, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Number, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Number)
                @Html.ValidationMessageFor(m => m.Number, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.DateValid, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.DateValid)
                @Html.ValidationMessageFor(m => m.DateValid, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.CVV, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.CVV)
                @Html.ValidationMessageFor(m => m.CVV, null, new { @class = "text-danger" })
            </div>
        </div>
    </div>
</div>